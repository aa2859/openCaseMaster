@using openCaseMaster.ViewModels
@model List<taskModel_prev>

@{
    string IndexCss, RealCss, NewCss;
    IndexCss = RealCss = NewCss = "";
    if (ViewBag.select == "Real")
    {
        RealCss = "class=popular";
    }
    else if (ViewBag.select == "New")
    {
        NewCss = "class=popular";
    }
    else
    {
        IndexCss = "class=popular";
    }
}

<br />
<div class="row">
    <div class="col-md-9">
        <div class="topics panel panel-default">
            <div class="panel-heading clearfix">
                <div class="filter pull-right">
                    <span class="l">查看:</span>
                    <a href="/PublicTask/Index" @IndexCss>全部</a> /
                    <a href="/PublicTask/node/101" @RealCss><i class="glyphicon glyphicon-star"></i> 测试任务</a> /
                    <a href="/PublicTask/Index" @NewCss>最新创建</a>
                </div>
            </div>

            <div class="panel-body">

                @foreach (var tmv in Model)
                {
                    <div class="topic media">
                        <div class="avatar media-left">
                            <a href="#"><img class="media-object avatar-48" src="~/Content/images/everyone.jpg"></a>
                        </div>
                        <div class="infos media-body">
                            <div class="title media-heading">
                                <a title="@tmv.title" href="/PublicTask/@tmv.ID">@tmv.title</a>

                            </div>
                            <div class="info">
                                <a class="node" href="/PublicTask/node/@tmv.nodeID">@tmv.nodeText</a>
                                •
                                <a data-author="true" data-name="nana" href="#">@tmv.userName</a>
                                <span class="hidden-mobile">
                                    于 <abbr class="timeago" title="@tmv.creatDate">@tmv.timeago</abbr>发布
                                </span>
                                •
                                @if(@tmv.scriptCount>0)
                                {
                                <a class="state-false" title="测试案例" href="/PublicTask/@tmv.ID">@tmv.scriptCount 个案例</a>
                                }
                            </div>
                        </div>
                        <!--
                        <div class="count media-right">
                                <a class="state-false" title="案例数" href="/PublicTask/1">1</a>
                        </div>
                             -->
                    </div>
                }
            </div>
               @Html.Pagination((int)ViewBag.page,0)
        </div>
    </div>


    <div class="sidebar col-md-3">

        <div class="panel panel-default clearfix">
            <div class="panel-body">
                <div class="btn-group pull-left">
                    <a class="btn btn-primary" href="/PublicTask/add">发布新话题</a>
                    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <!--
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/topics/new?node=23">Appium</a>
                        </li>
                        <li>
                            <a href="/topics/new?node=32">移动性能测试</a>
                        </li>
                        <li>
                            <a href="/topics/new?node=33">移动测试基础</a>
                        </li>
                        <li>
                            <a href="/topics/new?node=36">新手区</a>
                        </li>
                        <li>
                            <a href="/topics/new?node=37">匿名吐槽</a>
                        </li>
                    </ul>
                        -->
                </div>

                
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">小帖士</div>
            <div class="panel-body">
                安卓客户端即将上线
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">众测客户端下载地址</div>

            <ul class="list-group">
                <li class="list-group-item" align="center">
                    <a href="#"><img src="~/Content/images/app.jpg"></a>
                </li>
            </ul>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">统计信息</div>
            <ul class="list-group">
                <li class="list-group-item">帖子数: 9082 个</li>
                <li class="list-group-item">当前任务: 4865 个</li>
                <li class="list-group-item">测试案例: 41543 条</li>
            </ul>
        </div>

       

    </div>

</div>
